<p id="notice"><%= notice %></p>

<h1>Credit Checkers</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>amount</th>
      <th>count</th>
      <th>history</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_checkers.each do |credit_checker| %>
      <tr>
        <td><%= credit_checker.id %></td>
        <td><%= credit_checker.amount %></td>
        <td><%= credit_checker.count %></td>
        <td><%= credit_checker.history %></td>
        <td><%= link_to 'Show', credit_checker %></td>
        <td><%= link_to 'Edit', edit_credit_checker_path(credit_checker) %></td>
        <td><%= link_to 'Destroy', credit_checker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

