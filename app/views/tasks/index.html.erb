<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>

    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Description</th>
      <th>Project</th>
      <th></th>
      <th></th>
      <th></th>
      <!-- <th colspan="3"></th> -->
    </tr>



    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.subject %></td>
        <td><%= task.due_date %></td>
        <td><%= task.status %></td>
        <td><%= task.description %></td>
        <!-- <td><%= task.project %></td> -->

        <!-- /posts/:post_id/comments/:id -->
        <td><%= link_to 'Show', [task.project, task] %></td>
        <!-- /posts/:post_id/comments/:id/edit -->
        <td><%= link_to 'Edit', edit_project_task_path(task.project, task)%></td>
        <!-- /posts/:post_id/comments/:id -->
        <td><%= link_to 'Destroy', [task.project, task], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
 
</table>

