<h1>Currency_type: INR </h1>

<table>
  <thead>
    <tr>
      <th>BTC per Transaction</th>
      <th>Transaction Type</th>
      <th>Transaction date</th>     
      <th>inr_amount</th>
      <th>inr_balance</th>
      <th>currency_status</th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_histories.each do |transaction_history| %>

      <tr>
        <% if transaction_history.currency_type == 'inr'%>
        <td><%= transaction_history.btc_per_transaction%></td>
        <td><%= transaction_history.transaction_type%></td>
        <td><%= transaction_history.created_at.time%></td>
        <td><%= transaction_history.inr_amount%></td>
        <td><%= transaction_history.inr_balance%></td>
        <td><%= transaction_history.currency_status%></td>
        <% end %>      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

