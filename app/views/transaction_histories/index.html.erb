<style type="text/css">
  body{
    background-color: lightyellow;
    text-align: center;
    width: 100%;
  }
  table {
    padding: 1px auto; 
    margin :auto;
  }
  th, td {
    text-align: left;
    padding: 8px;
  }
  th{
    background-color:  #00f29f;
  }
tr:nth-child(even) {background-color:lightgray;}
</style>



<p id="notice"><%= notice %></p>

<h1>Transaction Histories</h1>

<table>
  <thead>
    <tr>
      <th>currency_type</th>
      <th>btc_amount</th>
      <th>inr_amount</th>
      <th>btc_balance</th>
      <th>inr_balance</th>
      <th>btc_status</th>
      <th>inr_status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_histories.each do |transaction_history| %>
      <tr>
        <td><%= transaction_history.currency_type%></td>
        <td><%= transaction_history.btc_amount%></td>
        <td><%= transaction_history.inr_amount%></td>
        <td><%= transaction_history.btc_balance%></td>
        <td><%= transaction_history.inr_balance%></td>
        <td><%= transaction_history.btc_status%></td>
        <td><%= transaction_history.inr_status%></td>

        <td><%= link_to 'Show', transaction_history %></td>
        <td><%= link_to 'Edit', edit_transaction_history_path(transaction_history) %></td>
        <td><%= link_to 'Destroy', transaction_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction History', new_transaction_history_path %>
